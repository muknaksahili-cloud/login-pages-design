
      .container {
        display: flex;
        height: 300px;
        justify-content: center;
        align-items: center;

        .anchor {
          height: 100px;
          width: 100px;
          position: relative;

          .up {
            inset-inline-end: 30px;
            bottom: 80px;
          }
          .down {
            inset-inline-end: 30px;
            bottom: -20px;
          }
          .left {
            inset-inline-end: 80px;
            bottom: 30px;
          }
          .right {
            inset-inline-end: -20px;
            bottom: 30px;
          }
        }
        nz-float-button-group {
          position: absolute;
        }
      }
    